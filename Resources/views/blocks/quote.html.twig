{# @var \Umanit\BlockCollectionBundle\Entity\Block\Quote block #}
<blockquote>
  <p>{{ block.quote }}</p>

  {% if block.author is not null %}
    <footer>{{ block.author }}</footer>
  {% endif %}

  {% if block.imagePath %}
    <img src="{{ block.imagePath }}" alt="{{ block.imageAlt }}" />
  {% endif %}
</blockquote>
